    <sql id="selectAnMdmcTaskVo">
        select id, version, create_by, creator_id, create_time, last_operator, update_by, update_time, object_type, object_id, user_id, principal_id, project_id, facilitator_id, maintainer_id, scheduled_finish_time, actual_finish_time, scheduled_start_time, actual_start_time, deadline, delay_reason, request_latitude, request_longitude, status, total_cost, clearing_form, title, contract_id, address_name, creator_call, trouble_reason, level, appoint_time, suggestion, result, note,remark from an_mdmc_task
    </sql>

    <select id="selectAnMdmcTaskList" parameterType="AnMdmcTask" resultMap="AnMdmcTaskResult">
        <include refid="selectAnMdmcTaskVo"/>
        <where>
            <if test="addressName != null  and addressName != ''"> and address_name like concat('%', #{addressName}, '%')</if>
        </where>
    </select>

    <select id="selectAnMdmcTaskListByUserId" parameterType="Long" resultMap="AnMdmcTaskResult">
        <include refid="selectAnMdmcTaskVo"/>
        where user_id=#{id} or facilitator_id=#{id} or maintainer_id=#{id} or principal_id=#{id}) order by created_time desc
    </select>

    <select id="selectAnMdmcTaskById" parameterType="Long" resultMap="AnMdmcTaskResult">
        <include refid="selectAnMdmcTaskVo"/>
        where id = #{id}
    </select>

    <select id="selectByMantainerId" parameterType="Long" resultMap="AnMdmcTaskResult">
    <include refid="selectAnMdmcTaskVo"/>
    where status>4 and status!=14 and status!=15 and maintainer_id=#{id} order by created_time desc
    </select>

    <select id="selectByFacId" parameterType="Long" resultMap="AnMdmcTaskResult">
        <include refid="selectAnMdmcTaskVo"/>
        where status>2 and status!=14  and facilitator_id=#{id} order by created_time desc
    </select>

    <select id="selectBySomeoneIdAndStatus"  resultMap="AnMdmcTaskResult">
        <include refid="selectAnMdmcTaskVo"/>
        where status=#{status} and (user_id=#{id} or facilitator_id=#{id} or maintainer_id=#{id} or principal_id=#{id}) order by created_time desc
