    <sql id="selectAnAmcAlarmVo">
        select alarm_id, dept_id, dept_name, user_id, user_name, version, alarm_name, alarm_type, alarm_level, alarm_asset, asset_type, alarm_status, alarm_location, alarm_longitude, alarm_latitude, alarm_photo, last_occur_time, description, create_by, create_time, update_by, update_time, remark from an_amc_alarm
    </sql>

    <select id="selectAnAmcAlarmList" parameterType="AnAmcAlarm" resultMap="AnAmcAlarmResult">
        <include refid="selectAnAmcAlarmVo"/>
        <where>  
            <if test="deptName != null  and deptName != ''"> and dept_name like concat('%', #{deptName}, '%')</if>
            <if test="userName != null  and userName != ''"> and user_name like concat('%', #{userName}, '%')</if>
            <if test="alarmName != null  and alarmName != ''"> and alarm_name like concat('%', #{alarmName}, '%')</if>
        </where>
    </select>
    
    <select id="selectAnAmcAlarmById" parameterType="Long" resultMap="AnAmcAlarmResult">
        <include refid="selectAnAmcAlarmVo"/>
        where alarm_id = #{alarmId}
    </select>
        
