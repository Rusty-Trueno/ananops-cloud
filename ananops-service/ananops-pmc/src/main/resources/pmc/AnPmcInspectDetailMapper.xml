<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ananops.pmc.mapper.AnPmcInspectDetailMapper">
    
    <resultMap type="AnPmcInspectDetail" id="AnPmcInspectDetailResult">
        <result property="id"    column="id"    />
        <result property="version"    column="version"    />
        <result property="name"    column="name"    />
        <result property="inspectionTaskId"    column="inspection_task_id"    />
        <result property="inspectionTaskName"    column="inspection_task_name"    />
        <result property="itemName"    column="item_name"    />
        <result property="maintainerId"    column="maintainer_id"    />
        <result property="maintainerName"    column="maintainer_name"    />
        <result property="description"    column="description"    />
        <result property="result"    column="result"    />
        <result property="status"    column="status"    />
        <result property="remark"    column="remark"    />
        <result property="createBy"    column="create_by"    />
        <result property="creatorId"    column="creator_id"    />
        <result property="createTime"    column="create_time"    />
        <result property="lastOperator"    column="last_operator"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectAnPmcInspectDetailVo">
        select id, version, name, inspection_task_id, inspection_task_name, item_name, maintainer_id, maintainer_name, description, result, status, remark, create_by, creator_id, create_time, last_operator, update_by, update_time from an_pmc_inspect_detail
    </sql>

    <select id="selectAnPmcInspectDetailList" parameterType="AnPmcInspectDetail" resultMap="AnPmcInspectDetailResult">
        <include refid="selectAnPmcInspectDetailVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="inspectionTaskName != null  and inspectionTaskName != ''"> and inspection_task_name like concat('%', #{inspectionTaskName}, '%')</if>
            <if test="itemName != null  and itemName != ''"> and item_name like concat('%', #{itemName}, '%')</if>
            <if test="maintainerName != null  and maintainerName != ''"> and maintainer_name like concat('%', #{maintainerName}, '%')</if>
        </where>
    </select>
    
    <select id="selectAnPmcInspectDetailById" parameterType="Long" resultMap="AnPmcInspectDetailResult">
        <include refid="selectAnPmcInspectDetailVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertAnPmcInspectDetail" parameterType="AnPmcInspectDetail">
        insert into an_pmc_inspect_detail
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null ">id,</if>
            <if test="version != null  and version != ''">version,</if>
            <if test="name != null  and name != ''">name,</if>
            <if test="inspectionTaskId != null ">inspection_task_id,</if>
            <if test="inspectionTaskName != null  and inspectionTaskName != ''">inspection_task_name,</if>
            <if test="itemName != null  and itemName != ''">item_name,</if>
            <if test="maintainerId != null ">maintainer_id,</if>
            <if test="maintainerName != null  and maintainerName != ''">maintainer_name,</if>
            <if test="description != null  and description != ''">description,</if>
            <if test="result != null  and result != ''">result,</if>
            <if test="status != null ">status,</if>
            <if test="remark != null  and remark != ''">remark,</if>
            <if test="createBy != null  and createBy != ''">create_by,</if>
            <if test="creatorId != null ">creator_id,</if>
            <if test="createTime != null ">create_time,</if>
            <if test="lastOperator != null  and lastOperator != ''">last_operator,</if>
            <if test="updateBy != null ">update_by,</if>
            <if test="updateTime != null ">update_time,</if>
         </trim>
    </insert>

    <update id="updateAnPmcInspectDetail" parameterType="AnPmcInspectDetail">
        update an_pmc_inspect_detail
        <trim prefix="SET" suffixOverrides=",">
            <if test="version != null  and version != ''">version = #{version},</if>
            <if test="name != null  and name != ''">name = #{name},</if>
            <if test="inspectionTaskId != null ">inspection_task_id = #{inspectionTaskId},</if>
            <if test="inspectionTaskName != null  and inspectionTaskName != ''">inspection_task_name = #{inspectionTaskName},</if>
            <if test="itemName != null  and itemName != ''">item_name = #{itemName},</if>
            <if test="maintainerId != null ">maintainer_id = #{maintainerId},</if>
            <if test="maintainerName != null  and maintainerName != ''">maintainer_name = #{maintainerName},</if>
            <if test="description != null  and description != ''">description = #{description},</if>
            <if test="result != null  and result != ''">result = #{result},</if>
            <if test="status != null ">status = #{status},</if>
            <if test="remark != null  and remark != ''">remark = #{remark},</if>
            <if test="createBy != null  and createBy != ''">create_by = #{createBy},</if>
            <if test="creatorId != null ">creator_id = #{creatorId},</if>
            <if test="createTime != null ">create_time = #{createTime},</if>
            <if test="lastOperator != null  and lastOperator != ''">last_operator = #{lastOperator},</if>
            <if test="updateBy != null ">update_by = #{updateBy},</if>
            <if test="updateTime != null ">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteAnPmcInspectDetailById" parameterType="Long">
        delete from an_pmc_inspect_detail where id = #{id}
    </delete>

    <delete id="deleteAnPmcInspectDetailByIds" parameterType="String">
        delete from an_pmc_inspect_detail where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    
</mapper>